{
  "name": "emiliopedrollo/auto-ufsm",
  "description": "Projeto para automatizar ações no portal da UFSM",
  "type": "project",
  "require": {
    "php": "^7.1",
    "ext-posix": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.3",
    "symfony/yaml": "^3.4",
    "symfony/console": "^3.4",
    "nesbot/carbon": "^1.22",
    "illuminate/support": "^5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "macfja/phar-builder": "^0.2.6"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Emílio B. Pedrollo",
      "email": "emiliopedrollo@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "AutoUFSM\\": "src/"
    }
  },
  "extra": {
    "phar-builder": {
      "compression": "GZip",
      "name": "AutoUFSM.phar",
      "output-dir": "bin/",
      "entry-point": "src/application.php",
      "skip-shebang": false,
      "include": [
        "src"
      ],
      "include-dev": false,
      "events": {
        "command.package.end": [
          "chmod +x bin/AutoUFSM.phar"
        ]
      }
    }
  }
}
